<%- include ("./partials/header.ejs") %>

    <div class="container">
        <div class="row mt-4">
            <h1 class="display-4 mx-auto">Login</h1>
        </div>
        <div class="row">
            <form action="/login" method="POST" style="width: 50%;" class="mx-auto">
                <div class="form-group">
                    <label for="Username">Enter your Username</label>
                    <input type="text" name="username" class="form-control" id="Username" aria-describedby="emailHelp" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="Password">Enter your Password</label>
                    <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
                </div>
                <input type="submit" value="Login" class="btn btn-primary" style="width: 100%;">
            </form>
        </div>
    </div>

    <%- include ("./partials/footer.ejs") %>