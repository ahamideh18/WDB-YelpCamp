<%- include ("../partials/header.ejs") %>

    <div class="container">
        <div class="row mt-4">
            <h1 class="mx-auto display-4">Edit Comment</h1>
        </div>
        <div class="row">
            <div style="width: 50%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea name="comment[text]"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>
        </div>
    </div>

    <%- include ("../partials/footer.ejs") %>